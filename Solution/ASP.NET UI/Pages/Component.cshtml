@page
@model ASP.NET_UI.Pages.Components.ComponentModel
@{
    ViewData["Title"] = "Component Page"; // Title of the Component Page
}

<h1>Add Component</h1>

<!-- Add inline styles for layout spacing -->
<style>
    .section {
        margin-bottom: 20px; /* Adds space between sections */
    }

    .form-field {
        margin-bottom: 10px; /* Adds space between input fields */
    }

    .button-container {
        margin-top: 20px; /* Adds space above the buttons */
        margin-bottom: 20px; /* Adds space below the buttons */
    }
</style>

    <!-- Component Form -->
<form method="post" class="section">

    <div class="form-field">
        <label for="id">ID:</label>
        <input type="number" id="id" name="ID" />
    </div>
    <div class="form-field">
        <label for="name">Name:</label>
        <input type="text" id="name" name="Name" />
    </div>
    <div class="form-field">
        <label for="purchaseDate">Date of Purchase:</label>
        <input type="date" id="purchaseDate" name="DOP" />
    </div>
    <div class="form-field">
        <label for="installDate">Date Installed:</label>
        <input type="date" id="installDate" name="InstallDate" />
    </div>
    <div class="form-field">
        <label for="endOfLife">End of Life:</label>
        <input type="date" id="endOfLife" name="EOL" />
    </div>

    <!-- Save Equipment Button -->
    <div class="button-container">
        <button type="submit" class="btn btn-primary">Save Component</button>
    </div>

</form>